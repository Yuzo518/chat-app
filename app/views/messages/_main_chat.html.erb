<div class="main-head">
  <div class="room-name">
    <div class="name">
      TestChat
    </div>
  </div>
  <div class="end-room">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="chats">
  <div class="chat">
    <div class="name-time">
      <div class="chat-name">Ozuy</div>
      <div class="chat-time">2020/08/25(Wed) 15:59</div>
    </div>
    <div class="chat-text">おはよう</div>
  </div>
  <div class="chat">
    <div class="name-time">
      <div class="chat-name">Ozuy</div>
      <div class="chat-time">2020/08/25(Wed) 15:59</div>
    </div>
    <div class="chat-text">おはよう</div>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "main-form"}, local: true do |f| %>
  <div class="message">
    <%= f.text_field :content, class: 'input-message', placeholder: 'type a message' %>
    <label class="input-image">
      <span class="image-btn">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
