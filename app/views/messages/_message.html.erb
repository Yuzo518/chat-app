<div class="chat">
  <div class="name-time">
    <div class="chat-name">
      <%= message.user.name %>
    </div>
    <div class="chat-time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="chat-text">
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '5000x500'), class: 'message-image' if message.image.attached? %>
</div>